<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="DB이름을 입력하세요."
            android:id="@+id/_23_dbNameEt"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DB 생성"
            android:id="@+id/_23_dbCreateBtn"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="TABLE 이름을 입력하세요."
            android:id="@+id/_23_tableNameEt"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TALBE 생성"
            android:id="@+id/_23_tableCreateBtn"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="사용자 이름을 입력하세요."
            android:id="@+id/_23_empNameEt"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="사용자 나이를 입력하세요."
            android:id="@+id/_23_empAgeEt"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="사용자 번호을 입력하세요."
            android:id="@+id/_23_empPhoneEt"/>

        <Button
            android:id="@+id/_23_empCreateBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사용자 등록"/>

    </LinearLayout>
    <Button
        android:id="@+id/empSelectBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="모든 사람 출력"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/_23_resultTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>


</LinearLayout>